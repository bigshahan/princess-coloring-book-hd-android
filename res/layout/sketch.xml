            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:background="@color/green"
            		android:src="@drawable/color_circle" />
        
        		<ImageView
            		android:id="@+id/imageView6"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:background="@color/light_pink"
            		android:src="@drawable/color_circle" />
        		
        		<ImageView
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:background="@color/green"
            		android:src="@drawable/color_circle" />
        
        		<ImageView
            		android:id="@+id/imageView6"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:background="@color/light_pink"
